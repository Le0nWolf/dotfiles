{{- $isServer := promptBoolOnce . "isServer" "Is this a server? (yes/no)" -}}

[data]
{{- if $isServer }}
    role = "server"
{{- else }}
    role = "client"
{{- end }}
{{- if not $isServer }}
{{- $email := promptStringOnce . "email" "Email address" }}
    email = {{ $email | quote }}
{{- end }}

[edit]
{{- if eq .chezmoi.os "windows" }}
    command = "code"
    args = ["--wait"]
{{ else }}
    command = "vim"
{{ end -}}
